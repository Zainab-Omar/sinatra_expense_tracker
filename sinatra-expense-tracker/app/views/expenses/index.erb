<p>Welcome <b><%=@user.username%></b>!</p>

<h1>My Expenses</h1>
<br></br>
<ul>
  <% if @expenses.size > 0 %>
    <% @expenses.each do |expense| %>
      <% if expense.user_id == @user.id %>
      <li><b><%= expense.vendor %></b> from <%= expense.date %> for $<%= expense.total%></li>
      <% end %>
    <% end %>
  <% else %>
    <p>You don't have any expenses recorded yet! <a href="/expenses/new">Create a new one here</a>.</p>
  <% end %>
</ul>

<p><a href="/logout">Log Out</a></p>
